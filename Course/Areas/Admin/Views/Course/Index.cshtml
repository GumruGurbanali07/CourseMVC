@using CourseApp.Models
@model List<Courses>
@{
    ViewData["Title"] = "Courses";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5> Courses </h5>
            
        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Course Name </th>
                                <th class="hidden-xs">Category </th>
                                <th> Teacher </th>                                
                                <th> Price </th>                                
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.CourseName</td>
                                    <td class="hidden-xs">@item.CourseCategory.CourseCategoryName</td>
                                    <td>@item.Teachers.TeacherName</td>
                                    <td>@item.Price</td>
                                    <td><a href="javascript:;" class="btn btn-outline-primary btn-round btn-sm purple"> <i class="fa-solid fa-pen"></i> Edit </a> </td>
                                    <td><a href="javascript:;" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a> </td>
                                </tr>
                            }
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


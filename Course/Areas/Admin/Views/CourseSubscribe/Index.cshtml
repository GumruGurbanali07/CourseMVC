@using CourseApp.Models
@model List<CourseSubcribe>
@{
    ViewData["Title"] = "Course Subscribe";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title d-flex">
            <h5> Course Subscribe </h5>
            <a href="/Admin/CourseSubcribe/CreateCourseSubcribe" style="margin-left: 1100px" class="btn btn-primary">Add Subscribe</a>

        </div>
        <!-- / ibox-title -->
        <div id="demo7" class="ibox-content collapse in">
            <div class="borderedTable">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Course name </th>
                                <th>Subcribe Students</th>
                                <th>Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">@item.Course.CourseName</td>

                                    <td><a href="#" class="btn btn-primary">Add Student</a></td>
                                    
                                    <td>
                                        <a href="/Admin/CourseSubcribe/UpdateCourseSubcribe/@item.CourseSubcribeId" class="btn btn-outline-primary btn-round btn-sm purple"> <i class="fa-solid fa-pen"></i> Edit </a>
                                        <a href="/Admin/CourseSubcribe/DeleteCourseSubcribe/@item.CourseSubcribeId" class="btn btn-outline-danger btn-round btn-sm purple"> <i class="fa-solid fa-trash"></i> Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


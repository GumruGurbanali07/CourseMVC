@model Courses
@{
    ViewData["Title"] = Model.CourseName;
    ViewData["CourseA"] = "active";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- inner banner -->
<section class="inner-banner py-5">
    <div class="w3l-breadcrumb py-lg-5">
        <div class="container pt-4 pb-sm-4">
            <h4 class="inner-text-title pt-5">Course Details</h4>
            <ul class="breadcrumbs-custom-path">
                <li><a href="index.html">Home</a></li>
                <li class="active"><i class="fas fa-angle-right"></i>Course Details</li>
            </ul>
        </div>
    </div>
</section>
<!-- //inner banner -->
<!-- courses section -->
<div class="w3l-grids-block-5 py-5">
    <div class="container py-md-5 py-4 d-flex">
        <div>
            <h3>@Model.CourseName</h3>
            <br>
            <div class="content-top mb-4 mt-3">
                <ul class="list-unstyled  align-items-center justify-content-between">
                    <li> <i style="margin-right:5px" class="fa-solid fa-chalkboard-user text-primary"></i> @Model.Teachers.TeacherName</li>
                </ul>
            </div>
            <br>
            <p style="padding-right:20px">@Html.Raw(Model.CourseDescription)</p>
        </div>
        <div class="">
            <img src="@Model.CourseImage" style="width:700px; height:700px">
            <table style="margin-top: 20px;" class="table table-bordered">
                <tbody>
                    <tr>
                        <td class="text-center"><strong>Teacher:</strong></td>
                        <td class="text-center">@Model.Teachers.TeacherName</td>
                    </tr>
                    <tr>
                        <th class="text-center">Category:</th>
                        <td class="text-center">@Model.CourseCategory.CourseCategoryName</td>
                    </tr>
                    <tr>
                        <th class="text-center">Student:</th>
                        <td class="text-center">@ViewBag.StudentCount</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- //courses section -->

